<div class="container-fluid">
  <div class="row">
    <div class="col-lg-3">
      <h2>Sale Categories</h2>
      <div class="category-buttons">
        {{#each categories as |category| }}
          <button class="btn btn-category" onclick="location.href='/categories/{{category.id}}'">
            {{category.category_title}}
          </button>
        {{/each}}    
      </div>
    </div>
    <div class="col-lg-9">
      <div>
        <h2>Posts:</h2>
        <div class="post-cards">
          {{#if posts.length}}
            {{#each posts as |post| }}
              <div class="card animate__animated animate__fadeIn">
                <div class="card-body">
                  <h3 class="card-title">
                    <a href="/posts/{{post.id}}">{{post.title}}</a>
                  </h3>
                  <p class="card-text">{{post.description}}</p>
                  <p class="card-price">${{post.price}}</p>
                  <p class="card-info">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
                </div>
              </div>
            {{/each}}
          {{else}}
          <p>Select a Category.</p>
          {{/if}}
        </div>
      </div>    
    </div>
  </div>
</div>

